; Zone file for internal.local
; Internal network DNS records

$TTL 3600
$ORIGIN internal.local.

; Start of Authority record
@       IN      SOA     ns1.internal.local. admin.internal.local. (
                        2024010101      ; Serial number
                        3600            ; Refresh interval
                        1800            ; Retry interval
                        604800          ; Expire time
                        86400           ; Minimum TTL
                        )

; Name servers
@       IN      NS      ns1.internal.local.
@       IN      NS      ns2.internal.local.

; A records - IP addresses
@       IN      A       192.168.1.100
ns1     IN      A       192.168.1.101
ns2     IN      A       192.168.1.102
www     IN      A       192.168.1.100
mail    IN      A       192.168.1.103
ftp     IN      A       192.168.1.104
db      IN      A       192.168.1.105
api     IN      A       192.168.1.106

; CNAME records - aliases
web     IN      CNAME   www.internal.local.
smtp    IN      CNAME   mail.internal.local.

; MX records - mail servers
@       IN      MX      10 mail.internal.local.

; TXT records - text records
@       IN      TXT     "v=spf1 mx ~all"
_dmarc  IN      TXT     "v=DMARC1; p=quarantine; rua=mailto:dmarc@internal.local"

; SRV records - service records
_http._tcp     IN      SRV     10 5 80 www.internal.local.
_https._tcp    IN      SRV     10 5 443 www.internal.local.
_smtp._tcp     IN      SRV     10 5 25 mail.internal.local.
